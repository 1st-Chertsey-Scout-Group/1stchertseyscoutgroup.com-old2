---
import { Image } from "astro:assets";
import CoverImage from "../../media/hq-cover-photo.jpg";
import GroupBadge from "../../media/group-badge.png";
---

<div class="relative bg-gradient-to-r from-gray-900 to-gray-800 py-16">
  <div class="absolute inset-0">
    <Image
      src={CoverImage}
      alt="Photo of 1st Chertsey Scout HQ"
      class="w-full h-full object-cover opacity-50"
    />
  </div>
  <div
    class="relative max-w-screen-xl mx-auto px-8 z-10 text-center text-white"
  >
    <Image
      src={GroupBadge}
      class="p-3 mx-auto w-72"
      alt="The 1st Chertsey Scout Group badge"
    />
    <h1 class="text-4xl md:text-5xl font-extrabold leading-tight mb-6">
      1st Chertsey Scout Group
    </h1>
    <p class="text-lg md:text-xl mb-8">Home of Scouting in Chertsey</p>
  </div>
</div>
