---
import { getEntry } from "astro:content";

interface SectionTileProps {
  section: any;
  ageGroup: any;
}

const { section, ageGroup } = Astro.props as SectionTileProps;

const ageGroupEntry = (await getEntry(ageGroup)) as any;
---

<a
  href={"sections/" + section.slug}
  class="flex text-center justify-center content-stretch flex-col grow-0 shrink px-10 py-6 no-underline min-w-72 border-2 dark:text-stone-900 text-white border-red-600 bg-red-600 transition-all ease-in-out duration-300 hover:bg-transparent hover:text-red-600 dark:hover:text-red-600"
>
  <div class="text-2xl font-bold">{section.data.title}</div>
  <div class="text-lg font-semibold">
    <span>{ageGroupEntry.data.age}</span><span> years</span>
  </div>
</a>
